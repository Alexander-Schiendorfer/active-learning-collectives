int numBps=15;

float breakpoints[1..numBps]=[0.0, 6.666666666666667, 13.333333333333334, 20.0, 26.666666666666668, 33.333333333333336, 40.0, 46.666666666666664, 53.33333333333333, 59.99999999999999, 66.66666666666666, 73.33333333333333, 80.0, 86.66666666666667, 93.33333333333334];
